    "version": "0.2.0",
    "configurations": [
        {
            "command": "cd client && npm start",
            "name": "NodeJS: Run Frontend Client",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "server.api:app", "--reload"
            ],
            "jinja": true
        }
    ]
}